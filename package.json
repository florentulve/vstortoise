{
    "name": "vstortoise",
    "displayName": "TortoiseSVN",
    "description": "A simple TortoiseSVN binding fro Visual Code",
    "repository": {"url":"https://github.com/florentulve/vstortoise"},
    "version": "1.2.2",
    "publisher": "florentulve",
    "engines": {
        "vscode": "^1.0.0"
    },
    "categories": [
        "Other"
    ],
    "activationEvents": [
        "workspaceContains:.svn",
        "onCommand:vstortoise.svnLog",
        "onCommand:vstortoise.svnRevert",
        "onCommand:vstortoise.svnCommit",
        "onCommand:vstortoise.svnUpdate",
        "onCommand:vstortoise.svnDiff",
        "onCommand:vstortoise.svnBlame"
    ],
    "main": "./out/extension",
    "contributes": {
        "configuration": {
            "type": "object",
            "title": "TortoiseSVN configuration",
            "properties": {
                "TortoiseSVN.path": {
                    "type": "string",
                    "default": "C:\\Program Files\\TortoiseSVN",
                    "description": "Speficies the path to TortoiseSVN installation"
                }
            }
        },
        "commands": [
            {
                "command": "vstortoise.svnLog",
                "title": "SVN Log"
            },
            {
                "command": "vstortoise.svnRevert",
                "title": "SVN Revert"
            },
            {
                "command": "vstortoise.svnCommit",
                "title": "SVN Commit"
            },
            {
                "command": "vstortoise.svnUpdate",
                "title": "SVN Update"
            },
            {
                "command": "vstortoise.svnDiff",
                "title": "SVN Diff"
            },
            {
                "command": "vstortoise.svnBlame",
                "title": "SVN Blame"
            }
        ],
        "keybindings": [
            {
                "command": "vstortoise.svnLog",
                "key": "shift+alt+l"
            },
            {
                "command": "vstortoise.svnCommit",
                "key": "shift+alt+c"
            },
            {
                "command": "vstortoise.svnDiff",
                "key": "shift+alt+d"
            },
            {
                "command": "vstortoise.svnRevert",
                "key": "shift+alt+r"
            },
            {
                "command": "vstortoise.svnUpdate",
                "key": "shift+alt+u"
            }
        ],
        "menus": {
            "explorer/context": [
                {
                    "command": "vstortoise.svnUpdate",
                    "group": "TortoiseSVN"
                },
                {
                    "command": "vstortoise.svnCommit",
                    "group": "TortoiseSVN"
                },
                {
                    "command": "vstortoise.svnLog",
                    "group": "TortoiseSVN"
                },
                {
                    "command": "vstortoise.svnRevert",
                    "group": "TortoiseSVN"
                },
                {
                    "command": "vstortoise.svnDiff",
                    "group": "TortoiseSVN"
                }
            ],
            "editor/context": [
                {
                    "command": "vstortoise.svnUpdate",
                    "group": "TortoiseSVN"
                },
                {
                    "command": "vstortoise.svnCommit",
                    "group": "TortoiseSVN"
                },
                {
                    "command": "vstortoise.svnLog",
                    "group": "TortoiseSVN"
                },
                {
                    "command": "vstortoise.svnRevert",
                    "group": "TortoiseSVN"
                },
                {
                    "command": "vstortoise.svnDiff",
                    "group": "TortoiseSVN"
                }
            ]
        }
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "postinstall": "node ./node_modules/vscode/bin/install",
        "test": "npm run compile && node ./node_modules/vscode/bin/test"
    },
    "devDependencies": {
        "typescript": "^2.6.1",
        "vscode": "^1.1.21",
        "tslint": "^5.8.0",
        "@types/node": "^8.10.25",
        "@types/mocha": "^2.2.42"
    },
    "dependencies": {
        "command-exists": "^1.2.8"
    }
}
