{
    "compilerOptions": {
        "forceConsistentCasingInFileNames": true,
		"module": "commonjs",
		"target": "ES2020",
		"outDir": "out",
		"lib": [
			"ES2020",
            "DOM"
		],
        "sourceMap": true,
        "rootDir": "src",
        "strict": true,
        "noUnusedLocals": true,
        "noImplicitReturns": true,
        "noFallthroughCasesInSwitch": true,
        "noUnusedParameters": true,
    },
    "exclude": [
        "node_modules",
        ".vscode-test",
        "out",
    ]
}